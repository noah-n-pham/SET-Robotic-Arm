<?xml version="1.0" ?>
<robot name="three_link_arm">

  <!-- Base link (fixed to the ground) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <!-- ==================== LINK 1 ==================== -->
  <link name="link1">
    <visual>
      <!-- Offset geometry so it extends +X direction from joint -->
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="1.0"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="1.0"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0.5 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"/>
    </inertial>
  </link>

  <link name="base_fixed">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>
  </link>

  <joint name="base_yaw" type="revolute">
    <parent link="base_fixed"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1" lower="-3.14" upper="3.14" velocity="1.0"/>
  </joint>

  <!-- Joint 1 connects base_link → link1 -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="1" lower="-3.14" upper="3.14" velocity="2.0"/>
  </joint>


  <!-- ==================== LINK 2 ==================== -->
  <link name="link2">
    <visual>
      <origin xyz="0 0 .5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="1.0"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 .5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="1.0"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.5"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 2 connects link1 → link2, at link1’s far end -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>  <!-- attach at end of link1 -->
    <axis xyz="0 1 0"/>
    <limit effort="1" lower="-3.14" upper="3.14" velocity="2.0"/>
  </joint>

</robot>
